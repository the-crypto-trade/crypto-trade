{
    "name": "crypto-trade",
    "version": "1.0.0",
    "devDependencies": {
        "semantic-release": "^24.1.0",
        "conventional-changelog-conventionalcommits": "^8.0.0"
    },
    "release": {
        "branches": [
            "release"
        ],
        "plugins": [
            [
                "@semantic-release/commit-analyzer",
                {
                    "preset": "conventionalcommits",
                    "releaseRules": [
                        {
                            "type": "fix",
                            "release": "patch"
                        },
                        {
                            "type": "feat",
                            "release": "minor"
                        },
                        {
                            "type": "build",
                            "release": "patch"
                        },
                        {
                            "type": "chore",
                            "release": "patch"
                        },
                        {
                            "type": "ci",
                            "release": "patch"
                        },
                        {
                            "type": "docs",
                            "release": "patch"
                        },
                        {
                            "type": "style",
                            "release": "patch"
                        },
                        {
                            "type": "refactor",
                            "release": "patch"
                        },
                        {
                            "type": "perf",
                            "release": "patch"
                        },
                        {
                            "type": "test",
                            "release": "patch"
                        },
                        {
                            "type": "minor",
                            "release": "minor"
                        },
                        {
                            "type": "major",
                            "release": "major"
                        },
                        {
                            "type": "misc",
                            "release": "patch"
                        }
                    ]
                }
            ],
            [
                "@semantic-release/release-notes-generator",
                {
                    "preset": "conventionalcommits"
                }
            ],
            "@semantic-release/github"
        ]
    }
}
